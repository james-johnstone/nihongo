.container
	h2 Kana Groups
	.pull-right
		form.form-inline
			.form-group
				input.form-control(ng-model="searchText", placeholder="Filter")
	table.table.table-hover.table-striped.table-condensed
		thead
			tr
				th #
				th Group
				th Type
				th Order
				th Edit
		tr(ng-repeat="group in kanaGroups | filter:searchText | orderBy:'order'")
			td {{group._id}}
			td {{group.grouping}}
			td {{group.type}}
			td {{group.order}}
			td
				button.btn.btn-info(ng-click="editKanaGroup(group)")
	div page {{ currentPage+1 }} / {{numberOfPages()}}
	button.btn.btn-info(ng-disabled="currentPage == 0", ng-click="currentPage=currentPage-1") Previous
	button.btn.btn-info(ng-disabled="currentPage >= kanaGroups.length/pageSize - 1", ng-click="currentPage=currentPage+1") Next
	button.btn.btn-success.pull-right(ng-click="createGroup()") Add Grouping